npm run lint
echo "âœ…  Eslint checking done"
if [ "$branch" = "main" ]; then
  echo -e "\nğŸ  You can't commit directly to main branch"
  echo -e "\nâŒ  Pre-commit failed!\n"
  exit 1
fi
echo -e "\nâœ¨  Pre-commit success!\n"